<!-- googleon:index -->

<script>
(function () {

    const wait = (sec) => {
        return new Promise((resolve, reject) => {
            setTimeout(resolve, sec*1000);
        });
    };
		
    const event = (o) => {
        return new Promise((resolve, reject) => {
            document.dispatchEvent( new CustomEvent('infload', { detail: { order: o }}));
        });
    }

    const domParser = new DOMParser();
    const listElm = document.querySelector('#infinite');
    const skelton = document.querySelector('.skeletonList');
    const host = location.origin;
    const url = new URL('/sp/include/article/news/index.htm', host);
    let isLoadingInProgress = false;
    let next = 0;
    let loadMore = async function() {
        url.searchParams.set('order', next);
        let item = await fetch(url, {method: 'GET'});
				let order = 0;
        if (item.ok){
            await item.text().then( html => {
                if(html.length>0){
                    order = domParser.parseFromString(html, 'text/html').body.getElementsByClassName('append')[0].getAttribute("data-order");
                    listElm.insertBefore(domParser.parseFromString(html, 'text/html').body.getElementsByClassName('append')[0], skelton);
                    isLoadingInProgress = false;
                }
            });
            skelton.style.display='none';
            if(order>0){
                await event(order);
                await wait(0.8);
            }
        }
    };

    const absolutePosition = listElm.getBoundingClientRect().top;
    window.addEventListener('scroll', function() {
        if ( absolutePosition + listElm.getBoundingClientRect().height < scrollY + window.innerHeight) {
            if (!isLoadingInProgress) {
                skelton.style.display='block';
                isLoadingInProgress = true;
                next++;
                loadMore();
            }
        }
    });

}());
</script>

</body>
</html>

